{
  "name": "roomnmeal",
  "version": "1.0.0",
  "description": "Student-focused accommodation and services platform for college towns",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "setup-atlas": "node setup-atlas.js",
    "migrate-atlas": "cd server && npm run migrate-atlas",
    "create-env": "node create-env.js",
    "start": "cd server && npm start",
    "heroku-postbuild": "cd client && npm install && npm run build",
    "deploy": "node deploy.js",
    "fix-deployment": "node quick-deploy-fix.js",
    "seed-production": "cd server && npm run seed-production",
    "seed-atlas": "node seed-atlas.js",
    "test-seed": "node test-seed.js",
    "run-seed": "node run-seed.js",
    "build-netlify": "cd client && npm install && npm run build && node ../scripts/netlify-build-fix.js",
    "netlify-build": "bash netlify-build-fix.sh"
  },
  "keywords": ["mern", "student", "accommodation", "mess", "booking"],
  "author": "RoomNMeal Team",
  "license": "MIT",
  "dependencies": {
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
} 